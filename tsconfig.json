{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2015.core", "ESNext"],
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  }
}
